@model ProiectLicenta.Data.Models.Course

<style>
    .dl-horizontal{
        text-align:left;
    } 

    .btn{
        margin-right:30px;
    }
</style>

@{
    ViewBag.Title = "Delete";
}
    <h3 style="margin-top: 40px;text-align: center;">Are you sure you want to delete your course?</h3>
    <div>
        <hr />

        <center>

            <div style="background: #f8f9fa; padding: 20px; margin-bottom: 25px; border-radius: 20px; width: 40%; text-align: left; padding-left: 30px; border: 1px solid #b4b4b4; ">
                <div>
                    <b>@Html.DisplayNameFor(model => model.CourseName):</b> @Html.DisplayFor(model => model.CourseName)
                </div>
                <div>
                    <b>@Html.DisplayNameFor(model => model.CourseDescription):</b> @Html.DisplayFor(model => model.CourseDescription)
                </div>

                <div>
                    @if (Model.Active)
                    {
                        <b>This course is currently active.</b>
                    }
                    else
                    {
                        <b>This course is not active.</b>
                    }
                </div>
            </div>

        </center>

        <center>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    @Html.ActionLink("Abort", "GetUserCourses", "Course", null, new { @class = "btn btn-primary" })
                </div>
            }

        </center>
    </div>
