@model ProiectLicenta.Data.Models.Course

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-left text-primary">Edit Course</h2>

<style>
    .form-horizontal {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

        .form-horizontal h4 {
            color: #333;
        }

    .form-group {
        margin-bottom: 15px;
    }

    .text area {
        resize: both;
        overflow-y: auto;
    }

    .showInline {
        display: inline-block;
    }

    .control-label {
        text-align: left;
        padding-top: 7px;
    }

    .container-table {
        margin-top: 40px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    .back-link {
        margin-top: 20px;
        text-align: left;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-table">
        <div class="row">
            <div class="col-md-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CourseId)
                @Html.HiddenFor(model => model.Active)
                @Html.HiddenFor(model => model.ImagePath)

                <table class="table">
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.CourseName, htmlAttributes: new { @class = "control-label" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.CourseName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CourseName, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.CourseDescription, htmlAttributes: new { @class = "control-label" })
                        </td>
                        <td>
                            @Html.EditorFor(model => model.CourseDescription, new { htmlAttributes = new { @class = "form-control text area" } })
                            @Html.ValidationMessageFor(model => model.CourseDescription, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                </table>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

                @Html.HiddenFor(model => model.OwnerId)


            </div>
        </div>
    </div>
}


    @Html.ActionLink("Courses", "GetUserCourses", "Course", null, new { @class = "btn btn-link" });
