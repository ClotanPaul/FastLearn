@model Proiect_Licenta.ViewModels.TestViewModel

@{
    ViewBag.Title = "TakeTest";
}



<style>
    .form-horizontal {
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    #h3 {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 30px;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 10px;
        width: 90%;
        text-align: left;
        padding-left: 30px;
        border: 1.5px solid #696767;
        padding-bottom: 0px;
        padding-top: 20px;
        padding-right: 30px;
    }

    .form-control.text-area {
        width: 300px;
        height: 50px;
        max-height: 70px;
        max-width: 300px;
        white-space: pre-wrap;
        overflow-wrap: break-word;
    }

    .btn {
        margin-right: 20px;
    }

    #button-line {
        width: 1026px;
        margin-left: -31px;
        margin-bottom: 20px;
        border-top: none;
        border-bottom: 0.1rem groove #696767;
        margin-top: 0px;
        padding-top: 10px;
        margin-bottom: 15px;
    }

    .btn-right {
        margin-left: 160px;
        margin-right: 0px;
    }

    .btn-left {
        margin-right: 160px;
    }

    .btn-right2 {
        margin-left: 300px;
        margin-right: 0px;
    }

    .btn-left2 {
        margin-right: 300px;
    }
</style>


<h2>TakeTest</h2>

@using (Html.BeginForm("SubmitTest", "Test", FormMethod.Post))
{

    @Html.HiddenFor(m => m.TestId)
    <ol>
        @for (int i = 0; i < Model.Questions.Count; i++)
        {
            <li>
                <h4>@Model.Questions[i].QuestionString</h4>
                @Html.HiddenFor(m => m.Questions[i].QuestionId)
                @Html.HiddenFor(m => m.Questions[i].QuestionString)

                <div class="question:radio-group">
                    @foreach (var answer in Model.Questions[i].Answers)
                    {
                        <div>
                            <label>
                                @Html.RadioButtonFor(m => m.Questions[i].SelectedAnswerId, answer.AnswerId, new { @class = "question-radio" })
                                @answer.AnswerText
                            </label>
                        </div>
                    }
                </div>
            </li>
        }
    </ol>
    <button type="submit" name="submitButton" value="SubmitTest" class="btn btn-primary">Submit Test</button>
    <button type="submit" name="submitButton" value="SubmitTestWithPoints" class="btn btn-primary">Submit Test with Points Spent</button>
    <p>You don't think you did enough for this test? Choose the second submit option, spend 20 points, and lower the passing grade with 15 points(minimum passing grade is 50. No reduction past this.)</p>
}
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/takeTestValidation.js"></script>
}

