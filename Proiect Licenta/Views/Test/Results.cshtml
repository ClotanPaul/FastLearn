@model Proiect_Licenta.ViewModels.ResultsViewModel

@{
    ViewBag.Title = "Result";
}

<h2>Test Result</h2>

<p>
    <strong>Score:</strong> @Model.UserAnswer.Score %
</p><p>
    <strong>Minimum Score:</strong> @Model.ScorePercentage %
</p>
<p>
    <strong>Result:</strong> @(Model.UserAnswer.Passed ? "Passed" : "Failed")
</p>

@if (Model.UserAnswer.Passed)
{
    <p>
        @Html.ActionLink("Next Chapter", "NextSubChapter", "SubChapter", new { currentSubChapterId = (int)ViewData["currentSubChapterId"] }, null)
    </p>
}
else
{
    @Html.ActionLink("Back To Subchapter", "ViewSubchapter", "SubChapter", new { subchapterId = (int)ViewData["currentSubChapterId"] }, null)
 }

<h3>Answer Summary</h3>

<ul>
    @foreach (var q in Model.QuestionResponses)
    {
        <li>
            <div>@q.Question.QuestionString</div>
            <div><strong>Your Answer:</strong></div>
            <div>@q.UserAnswer</div>

            <div><strong>Correct Answer:</strong></div>
            <div>@q.CorrectAnswer</div>

        </li>
    }
</ul>
