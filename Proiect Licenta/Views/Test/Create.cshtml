@model ProiectLicenta.Data.Models.Test

@{
    ViewBag.Title = "Create Test";
}

<style>
    .form-horizontal {
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control.text-area {
        width: 300px;
        height: 100px;
        max-height: 120px;
        max-width: 300px;
        white-space: pre-wrap;
        overflow-wrap: break-word;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    #h3 {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 30px;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 10px;
        width: 55%;
        text-align: left;
        padding-left: 30px;
        border: 1px solid #838383;
        padding-bottom: 0px;
    }

    .btn {
        margin-right: 20px;
    }

    #button-line {
        border-top: 1px groove #838383;
        width: 625px;
        margin-left: -30px;
        border-bottom: none;
    }

    .btn-danger {
        margin-right: 0px;
    }
</style>

<h2 id="h3">Create Test</h2>
<center>
    @using (Html.BeginForm())
    {
        <div id="info-box">
            @Html.AntiForgeryToken()

            <div class="form-group" style="margin-left: 0px; margin-right: 0px;">
                <b>Minimum Score: </b>
                @Html.EditorFor(model => model.MinimumScore, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MinimumScore, "", new { @class = "text-danger" })
            </div>

            <div class="form-group" style="margin-left: 0px; margin-right: 0px;">
                <b>Test Description: </b>
                @Html.EditorFor(model => model.TestDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestDescription, "", new { @class = "text-danger" })
            </div>

            <div id="button-line"></div>
            <center>
                <div class="form-group" style=" margin-top: 15px; ">
                    <input type="submit" value="Create" class="btn btn-success" />
                    @Html.ActionLink("Abort", "Index", new { subChapterId = (int)ViewData["subchapterId"] }, new { @class = "btn btn-danger", @style = "margin-right: 0px;" })
                </div>
            </center>
        </div>
    }
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}