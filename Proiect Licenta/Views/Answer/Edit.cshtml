@model ProiectLicenta.Data.Models.Answer

@{
    ViewBag.Title = "Edit";
}

<style>
    .form-horizontal {
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    #h3 {
        margin-top: 40px;
        text-align: center;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 10px;
        width: 55%;
        text-align: left;
        padding-left: 30px;
        border: 0.1rem solid #838383;
        padding-bottom: 0px;
    }

    .form-control.text-area {
        width: 300px;
        height: 50px;
        max-height: 70px;
        max-width: 300px;
        white-space: pre-wrap;
        overflow-wrap: break-word;
    }

    .btn {
        margin-right: 20px;
    }

    #button-line {
        width: auto;
        width: 604px;
        margin-left: -30px;
        margin-bottom: 20px;
        border-top: none;
        border-bottom: 0.1rem groove #b4b4b4;
        margin-top: 0px;
        padding-top: 10px;
        margin-bottom: 15px;
    }
</style>

<h2 id="h3">Edit Answer</h2>

<center>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AnswerId)
        @Html.HiddenFor(model => model.QuestionId)

    <div id="info-box">

        <div style="margin-bottom: 5px;">
            <b>Course: </b> @Html.DisplayFor(model => model.Question.test.SubChapter.Chapter.Course.CourseName)
        </div>
        <div style="margin-bottom: 5px;">
            <b>Chapter: </b> @Html.DisplayFor(model => model.Question.test.SubChapter.Chapter.ChapterTitle)
        </div>
        <div style="margin-bottom: 5px;">
            <b>SubChapter: </b> @Html.DisplayFor(model => model.Question.test.SubChapter.SubchapterTitle)
        </div>
        <div style="margin-bottom: 5px;">
            <b>Question: </b> @Html.DisplayFor(model => model.Question.QuestionString)
        </div>


        <div class="form-group" style="margin-left: 0px;margin-right: 0px; margin-top:20px;">
            <b>Answer Text: </b>
            @Html.EditorFor(model => model.AnswerText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AnswerText, "", new { @class = "text-danger" })
        </div>

        <div class="form-group" style="margin-left: 0px;margin-right: 0px;">
            <b>Is Correct: </b>
            <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.IsCorrect)
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.IsCorrect, "", new { @class = "text-danger" })
        </div>

        <div id="button-line"></div>

        <center>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Abort", "Index", "Answer", new { questionId = Model.QuestionId }, new { @class = "btn btn-danger" })
            </div>
        </center>
    </div>
    }
</center>

