@model List<ProiectLicenta.Data.Models.Chat>

<style>
    .chat-container {
        border: 1px solid #3c3939;
        padding: 10px;
        margin-bottom: 10px;
        background-color: #bcbcbc;
        border-radius: 10px;
        color: #000000;
    }

    .form-horizontal {
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
        padding-right: 0px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    #h3 {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 30px;
    }

    .card {
        background: #f8f9fa;
        border-radius: 5px;
        padding: 20px;
        margin-top: 20px;
        margin-bottom: 20px;
        height: 500px;
        width: auto;
        border-radius: 10px;
        border: 2px solid #838383;
        padding-top: 15px;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 10px;
        text-align: left;
        width: 750px;
        padding-left: 20px;
        border: 2px solid #838383;
    }

    .btn {
        margin-right: 20px;
    }

    .card-img-top {
        border-radius: 15px;
        border: 2px solid #000000;
        object-fit: cover;
        margin-top: 15px;
        margin-top: 5px;
    }

    #title-line {
        border-bottom: 2px solid #838383;
        width: 379px;
        margin-left: -21px;
    }

    #card-desc {
        border: none;
    }

    #button-line {
        border-top: 1px groove #838383;
        border-bottom: none;
        margin-left: -22px;
        width: 748px;
        margin-top: 30px;
    }

    #button-line-chat {
        border-top: 1px groove #3c3939;
        border-bottom: none;
        margin-left: -11px;
        width: 706px;
        margin-top: 20px;
        padding-bottom: 10px;
    }

    #archived-chats {
        border-top: 1px solid #000;
        padding-top: 10px;
    }
</style>

<h1 id="h3">Chats</h1>

<center>
    <div id="info-box">
        @if (Model.ToList().Count > 0)
        {
            <center>
                <h2 style="margin-top: 0px;margin-bottom: 20px;">Active Requests</h2>
            </center>

            foreach (var chat in Model)
            {
                string studentEmail = @chat.Student?.Email ?? "NotAssigned";
                <div class="chat-container">
                    <h4>@chat.Topic</h4>
                    <p>
                        <strong>Course:</strong> @chat.SubChapter.Chapter.Course.CourseName<br />
                        <strong>Chapter:</strong> @chat.SubChapter.Chapter.ChapterTitle<br />
                        <strong>Subchapter:</strong> @chat.SubChapter.SubchapterTitle<br />
                        <strong>Student:</strong> @studentEmail
                    </p>
                    <div id="button-line-chat"></div>
                    <center>
                        @Html.ActionLink("Open Chat", "OpenChat", "Chat", new { chatId = chat.ChatId }, new { @class = "btn btn-primary" })<text>  </text>
                        @Html.ActionLink("Help Student", "TakeChat", "Chat", new { chatId = chat.ChatId }, new { @class = "btn btn-primary" })
                    </center>
                </div>
            }
        }
        else
        {
            <center>
                <h2 style="margin-top: 0px;margin-bottom: 20px;">No chat requests.</h2>
            </center>
        }
    </div>
</center>
