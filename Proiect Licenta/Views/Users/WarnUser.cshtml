@model Proiect_Licenta.ViewModels.WarnUserViewModel

@{
    ViewBag.Title = "WarnUser";
}

<style>
    .form-horizontal {
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 15px;
        padding-left: 10px;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }

    #h3 {
        margin-top: 40px;
        text-align: center;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        border-radius: 20px;
        width: 55%;
        text-align: left;
        padding-left: 30px;
        border: 1px solid #b4b4b4;
        padding-bottom: 10px;
    }

    .btn {
        margin-right: 20px;
    }
    #button-line {
        width: auto;
        width: 603px;
        margin-left: -30px;
        margin-bottom: 20px;
        border-top: none;
        border-bottom: 0.1rem groove #b4b4b4;
    }


</style>

<h3 id="h3">You are about to warn the following user:</h3>
<center>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div id="info-box">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <b>Email: </b>
                @Html.DisplayFor(model => model.UserName)
            </div>
            <div id="button-line"></div>
            <div class="form-group">
                @Html.LabelFor(model => model.Reason)<b>:</b>
                @Html.EditorFor(model => model.Reason, new { htmlAttributes = new { @class = "form-control reason-text-box" } })
                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
            </div>
            <center>
            <div class="form-group" style="margin-top: 20px; margin-bottom: 10px;">
                <input type="submit" value="Warn User" class="btn btn-success" />
                @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    @Html.ActionLink("Abort", "UsersDetails", "Users", null, new { @class = "btn btn-danger", @style= "margin-right: 0px;" })
                }
            </div>
                </center>
            @Html.HiddenFor(model => model.UserDataId)
        </div>
        

        
    }

</center>