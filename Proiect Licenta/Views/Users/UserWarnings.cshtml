@model IEnumerable<ProiectLicenta.Data.Models.Warning>

@{
    ViewBag.Title = "UserWarnings";
}

<h2 id="title">User Warnings</h2>

<style>
    body {
        background-color: #f8f9fa;
    }

    #title {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        background-color: #E1E1E1;
        border-radius: 20px;
        overflow: hidden;
        width: 70%;
    }

    .table th {
        background-color: #4D4C4C;
        color: #fff;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }
    #username {
        padding-left: 15px;
    }
</style>

<center>
<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th id="username"> @Html.DisplayNameFor(model => model.WarningReason)</th>
                <th style="width:30%">@Html.DisplayNameFor(model => model.User.Email)</th>
                <th style="width:20%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border-top: 0.2rem groove;">
                    <td id="username">@Html.DisplayFor(modelItem => item.WarningReason)</td>
                    <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                    <td>
                        @Html.ActionLink("Remove Warning", "RemoveWarning", new { warningId = item.WarningId }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    </center>
<div class="back-link">
    @Html.ActionLink("To User Panel", "UsersDetails", "Users", null, new { @class = "btn btn-info" })
</div>
