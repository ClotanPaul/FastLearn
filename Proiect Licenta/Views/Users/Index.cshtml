@model Proiect_Licenta.Models.UserData

@{
    ViewBag.Title = "Index";
}



<style>
    #h3 {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 50px;
    }

    #info-box {
        background: #f8f9fa;
        padding: 20px;
        margin-bottom: 25px;
        padding-bottom: 0px;
        border-radius: 10px;
        width: 55%;
        text-align: left;
        padding-left: 30px;
        border: 1px solid #b4b4b4;
    }

    .btn {
        margin-right: 20px;
    }

    #button-line {
        width: auto;
        border-top: 1px groove #b4b4b4;
        width: 626px;
        margin-left: -31px;
        border-bottom: none;
        margin-bottom: 0px;
        padding-top: 15px;
        margin-top: 20px;
        padding-bottom: 10px
    }
    .dl-horizontal{
        align-items: flex-start;
    }

    .form-group {
        margin-bottom: 5px;
        margin-top: 5px;
    }
</style>


<h1 id="h3">Account Details</h1>

<center>
    <div id="info-box">
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.UserName): </b>
            @Html.DisplayFor(model => model.UserName)
        </div>

        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Email): </b>
            @Html.DisplayFor(model => model.Email)
        </div>

        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Points): </b>
            @Html.DisplayFor(model => model.Points)
        </div>

        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.UserRole): </b>
            @Html.DisplayFor(model => model.UserRole)
        </div>

        <center id="button-line">
            <p>

                @Html.ActionLink("Edit Username", "Edit", "Users", new { id = Model.UserDataId }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Change your password", "ChangePassword","Manage", null, new { @class = "btn btn-primary" })
            </p>

        </center>
    </div>
    </center>

