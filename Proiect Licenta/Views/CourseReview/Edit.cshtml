@model ProiectLicenta.Data.Models.CourseReview

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-left text-primary">Edit</h2>

<style>
    .form-horizontal {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

    .form-horizontal h4 {
        color: #333;
    }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

    .btn-default:hover {
        background-color: #0056b3;
    }

    .back-link {
        margin-top: 20px;
        text-align: left;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CourseReviewId)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.CourseId)

        <div class="form-group">
            <h4><strong>@Html.DisplayNameFor(model => model.ReviewText):</strong></h4>
            @Html.EditorFor(model => model.ReviewText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReviewText, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <h4><strong>@Html.DisplayNameFor(model => model.Stars):</strong></h4>
            @Html.EditorFor(model => model.Stars, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Stars, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="back-link">
    @Html.ActionLink("Back to Review List", "Index", "CourseReview", new { courseId = Model.CourseId}, null)
</div>
