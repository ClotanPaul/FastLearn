@model IEnumerable<ProiectLicenta.Data.Models.CourseReview>

@{
    ViewBag.Title = "Index";
}

<style>
    h2 {
        color: #333;
        text-align: center;
        margin-top: 40px;
    }

    .table {
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        background: #f8f9fa;
        padding: 20px;
        border-radius: 20px;
        width: 70%;
        text-align: left;
        padding-left: 30px;
        margin: auto;
        margin-bottom: 25px;
        margin-top: 50px;
        overflow: hidden;
    }

    .table th {
        color: #333;
        border: none;
        padding: 10px;
    }

    .table td {
        color: #333;
        border: none;
        padding: 10px;

    }

    a {
        color: #007bff;
    }

    .btn-primary {
        margin-right: 10px;
    }
</style>

<h2>Reviews</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReviewText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stars)
        </th>
 
            <th>Actions</th>
        
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsActive || User.IsInRole("admin"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stars)
                </td>
                @if ((string)ViewData["UserId"] == item.UserId)
                {
                    <td width ="25%">
                        @Html.ActionLink("Edit", "Edit", new { id = item.CourseReviewId }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { courseReviewId = item.CourseReviewId }, new { @class = "btn btn-primary btn-danger btn-sm" })
                    </td>
                }
                else if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                {
                    <td width="25%";>
                        @if (item.IsActive)
                        {
                        @Html.ActionLink("Deactivate Review", "DeactivateReview", new { id = item.CourseReviewId }, new { @class = "btn btn-primary btn-sm" })
                        }
                        else
                        {
                        @Html.ActionLink("Activate Review", "ActivateReview", new { id = item.CourseReviewId }, new { @class = "btn btn-primary btn-sm" })
                        }
                    </td>
                }
                else
                {
                    <td>
                        No Action
                    </td>
                }
            </tr>
        }
    }
</table>
<center>
    @if (User.IsInRole("professor"))
    {
        @Html.ActionLink("Courses", "GetUserCourses", "Course", null, new { @class = "btn btn-primary btn-sm" });
    }
    else
    {
        if (User.IsInRole("student") || User.IsInRole("helping_student"))
        {
            @Html.ActionLink("To Courses", "GetStudentEnrolledCourses", "Course", null, new { @class = "btn btn-primary btn-sm" });
        }
        else
        {
            @Html.ActionLink("To Courses", "Index", "Course", null, new { @class = "btn btn-primary btn-sm" });
        }
    }
    @if ((string)ViewData["CanAdd"] == "true" && User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Add a new review", "Create", new { courseId = ViewData["courseId"] }, new { @class = "btn btn-primary btn-sm" })
    }
</center>
