@model ProiectLicenta.Data.Models.CourseReview

@{
    ViewBag.Title = "Delete";
}

<h2 class="text-left text-primary">Delete</h2>

<style>
    .form-horizontal {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin: auto;
    }

        .form-horizontal h4 {
            color: #333;
        }

    .btn-default {
        background-color: #007bff;
        color: #fff;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-default:hover {
            background-color: #0056b3;
        }

    .back-link {
        margin-top: 20px;
        text-align: left;
    }
</style>

<h3>Are you sure you want to delete this review?</h3>

<div class="form-horizontal">
    <h4>CourseReview</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            <strong>@Html.DisplayNameFor(model => model.ReviewText):</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReviewText)
        </dd>

        <dt>
            <strong>@Html.DisplayNameFor(model => model.Stars):</strong>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Stars)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div class="back-link">
    @Html.ActionLink("Back to List", "Index")
</div>