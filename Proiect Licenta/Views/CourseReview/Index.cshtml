@model IEnumerable<ProiectLicenta.Data.Models.CourseReview>

@{
    ViewBag.Title = "Reviews";
}

<h2 id="title">Reviews</h2>

<style>
    body {
        background-color: #f8f9fa;
    }

    #title {
        margin-top: 40px;
        text-align: center;
        margin-bottom: 20px;
    }

    .table {
        background-color: #E1E1E1;
        border-radius: 15px;
        overflow: hidden;
    }

        .table thead th {
            background-color: #4D4C4C;
            color: #fff;
        }

        #action{
            width: 20%;
        }

    .btn-group .btn {
        margin: 10px 10px;
    }

    .form-button {
        display: inline-block;
        margin-right: 10px;
    }

    .btn {
        margin-right: 20px;
    }

    #firstColumn {
        padding-left: 15px;
    }
</style>

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th id="firstColumn">@Html.DisplayNameFor(model => model.ReviewText)</th>
                <th>@Html.DisplayNameFor(model => model.Stars)</th>
                <th id="action">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.IsActive || User.IsInRole("admin"))
                {
                    <tr style="border-top: 0.2rem groove;">
                        <td id="firstColumn">@Html.DisplayFor(modelItem => item.ReviewText)</td>
                        <td>@Html.DisplayFor(modelItem => item.Stars)</td>
                        <td id="action">
                            @if ((string)ViewData["UserId"] == item.UserId)
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.CourseReviewId }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { courseReviewId = item.CourseReviewId }, new { @class = "btn btn-danger btn-sm" })
                            }
                            else if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                            {
                                if (item.IsActive)
                                {
                                    @Html.ActionLink("Deactivate Review", "DeactivateReview", new { id = item.CourseReviewId }, new { @class = "btn btn-danger btn-sm" })
                                }
                                else
                                {
                                    @Html.ActionLink("Activate Review", "ActivateReview", new { id = item.CourseReviewId }, new { @class = "btn btn-success btn-sm" })
                                }
                            }
                            else
                            {
                                @:No Action
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<center>

    @if ((string)ViewData["CanAdd"] == "true" && User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Add a new review", "Create", new { courseId = ViewData["courseId"] }, new { @class = "btn btn-info btn-sm" })
    }

    @if (User.IsInRole("professor"))
    {
        @Html.ActionLink("Courses", "GetUserCourses", "Course", null, new { @class = "btn btn-info btn-sm" });
    }
    else
    {
        if (User.IsInRole("student") || User.IsInRole("helping_student"))
        {
            @Html.ActionLink("To Courses", "GetStudentEnrolledCourses", "Course", null, new { @class = "btn btn-info btn-sm" });
        }
        else
        {
            @Html.ActionLink("To Courses", "Index", "Course", null, new { @class = "btn btn-info btn-sm" });
        }
    }

</center>
