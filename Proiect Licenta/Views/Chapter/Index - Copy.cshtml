@model IEnumerable<ProiectLicenta.Data.Models.Chapter>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if(!User.IsInRole("student"))
{ 
<p>
    @Html.ActionLink("Add a new Chapter", "Create", new { courseId = ViewData["courseId"] })
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ChapterTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ChapterDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChapterTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChapterDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ChapterId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ChapterId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ChapterId }) |
            @Html.ActionLink("ShowSubChapters", "Index", "SubChapter", new { chapterId = item.ChapterId }, null)
        </td>
    </tr>
}

</table>
