@model IEnumerable<ProiectLicenta.Data.Models.Chapter>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Chapter Index";
}

<div class="container mt-3">
    <h2 class="text-left">Chapter Index</h2>
    @if ((string)ViewData["ownerId"] == (string)ViewData["userId"])
    {
        <div class="text-left my-4">
            @Html.ActionLink("Add a new Chapter", "Create", new { courseId = ViewData["courseId"] }, new { @class = "btn btn-primary" })
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ChapterTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ChapterDescription)
                </th>
                <th>
                    Actions
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.CourseId)
                        @Html.DisplayFor(modelItem => item.ChapterTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChapterDescription)
                    <td>
                        @if (item.Course.OwnerId == (string)ViewData["userId"])
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = item.ChapterId }, new { @class = "btn btn-link" }) <text></text>
                            @Html.ActionLink("Details", "Details", new { id = item.ChapterId }, new { @class = "btn btn-link" }) <text></text>
                            @Html.ActionLink("Delete", "Delete", new { id = item.ChapterId }, new { @class = "btn btn-link" }) <text></text>
                        }
                        @Html.ActionLink("Subchapters", "Index", "SubChapter", new { chapterId = item.ChapterId }, new { @class = "btn btn-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!User.IsInRole("professor"))
    {
        @Html.ActionLink("Courses", "Index", "Course", null, new { @class = "btn btn-link" });
    }
    else
    {
        @Html.ActionLink("Courses", "GetUserCourses", "Course", null, new { @class = "btn btn-link" });
    }
</div>
